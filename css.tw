html {
  height:100%;
}
figcaption {
    font-size:80%;
    font-style:italic;
}
.inline {
    display: inline-block;
}
.left {
    float: left;
}
.right {
    float:right;
}
body {
    color: #000;
    font-family: 'Open Sans',serif;
    margin:0;
    height:100%;
    overflow:auto;
    position:relative;
    z-index: 3;
}
h1 {
    font-family: 'Arvo',serif;
    font-weight:700;
    font-size: 36px;
    line-height: 38px;
    margin: 0 0 10px 0;
    color: #dd3b2a;
}
h4 {
    font-family: 'Arvo',serif;
    font-weight:700;
    font-size:18px;
    margin-top:0;
}
h6 {
    font-family: 'Arvo',serif;
    font-weight:700;
    font-size:14px;
    margin:0;
}
.img-container {
    position:fixed;
    top:0;
    left:0;
    background-repeat: no-repeat;
    background-position: center;
    background-attachment: fixed; 
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
    height:100%;
    width:100%;
    -webkit-transition: opacity 1s ease-in-out;
    -moz-transition: opacity 1s ease-in-out;
    -o-transition: opacity 1s ease-in-out;
    transition: opacity 1s ease-in-out;
}
.img-anchor {
    background-image: url(images/imagetest.jpg);
    opacity:1;
    z-index:1;
}
.img-fader {
    z-index:2;
    
}
.background-fade {
    opacity:0;
}


/* Make link font slightly smaller to compensate for boldface */
.content a.link-internal,
.content a.link-external,
.content a.link-back,
.content a.link-return {
    font-size: 90%;
}
.content strong {
    font-size: 90%;
}
#passages {
    color: #000;
    font-size:15px;
    background-color:#fefefe;
    width:60%;
    min-height:100%;
    margin: 0 auto;
    border-left:none;
    padding: 55px 2em 3em 2em;
    -moz-box-shadow: 0 0 20px black;
    -webkit-box-shadow: 0 0 20px black;
    box-shadow: 0 0 20px black;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    box-sizing:border-box;
    position:relative;
}
.passage {
    line-height: 1.75;
    margin-bottom: 0;
    text-align: left;
    height:100%;
}
#ui-bar {
    display:none;
}
#passages table.alternating-rows tr:nth-child(odd) {
    background-color:#EEEEEE;/*Fallback*/
    background-color:rgba(221,221,221,0.5);
}
#passages table.alternating-rows tr:nth-child(even) {
    background-color:#DDDDDD;/*Fallback*/
    background-color:rgba(204,204,204,0.5);
}
#passages table.box {
    background-color:#EEEEEE;/*Fallback*/
    background-color:rgba(221,221,221,0.5);
}
#passages table.box th {
    background-color:#DDDDDD;/*Fallback*/
    background-color:rgba(204,204,204,0.5);
}
#passages table.box tr:first-child td,
#passages table.box tr:first-child th {
    padding-top:10px;
}
#passages table.box tr:last-child td {
    padding-bottom:10px;
}
#passages table {
    font-size: 80%;
    border-collapse: collapse;
    line-height:145%;
}
#passages th, #passages td {
    padding: 0.5em 1em;
}
table a.link-internal, a.link-external, a.link-back, a.link-return {
    font-size: 100%!important;
}


:: Custom UI styles [stylesheet]

header#custom {
    position:fixed;
    top:0;
    margin:0 auto 0 20%;
    height:44px;
    width:60%;
    background-color:#555;
    border-bottom:1px solid #333;
    -moz-box-shadow: 0 0 10px black;
    -webkit-box-shadow: 0 0 10px black;
    box-shadow: 0 0 10px black;
    z-index:10;
    display:none;
}

#custom h2 {
    margin:2px 0 0 8px;
    display:inline-block;
    font-family: "Open Sans", sans-serif;
    color:#bbb;
    font-size:16px;
}

#controls {
    display:inline-block;
    float:right;
    margin-top:3px;
    right:5px;
}

#story-rewind {
    display: inline-block;
    font-family: "Open Sans", sans-serif;
    font-size:13px;
    float:right;
    margin-top:3px;
    margin-right: 10px;
    color:#bbb;
}

#story-rewind div {
    display: inline-block;
}

#story-rewind a#rewind-icon {
    margin-left:7px;
}

#story-rewind a#rewind-icon:after {
    content: "\e602";
    font-family: 'icomoon-sugarcube-extended';
    font-size: 13px;
    color: #222;
    text-shadow: 0px 1px 1px #888;
    font-weight:bold;
    font-size:100%!important;
    position:relative;
    top:1px;
}

#story-rewind a#rewind-icon:hover:after {
    color: #45cbe6;
    text-decoration: none;
}


/* Popover menu */
/* based on http://jsfiddle.net/LPbhS/ */
#story-rewind div:hover ul {
  visibility: visible;
  opacity: 1;
  padding: 4px 0 6px 0;
}
#story-rewind ul {
  visibility: hidden;
  padding:0;
  opacity: 0;
  position: absolute;
  top: 100%;
  list-style:none;
  border: 1px solid;
  border-color: #777 #6c6c6c #666;
  border-radius: 5px;
  -webkit-transition-property: opacity, padding, visibility;
  -moz-transition-property: opacity, padding, visibility;
  -ms-transition-property: opacity, padding, visibility;
  -o-transition-property: opacity, padding, visibility;
  transition-property: opacity, padding, visibility;
  -webkit-transition: 0.2s ease-out;
  -moz-transition: 0.2s ease-out;
  -ms-transition: 0.2s ease-out;
  -o-transition: 0.2s ease-out;
  transition: 0.2s ease-out;
  background-color: #d9e3fa;
  background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #eef3fe), color-stop(100%, #d9e3fa));
  background-image: -webkit-linear-gradient(top, #eef3fe, #d9e3fa);
  background-image: -moz-linear-gradient(top, #eef3fe, #d9e3fa);
  background-image: -ms-linear-gradient(top, #eef3fe, #d9e3fa);
  background-image: -o-linear-gradient(top, #eef3fe, #d9e3fa);
  background-image: linear-gradient(top, #eef3fe, #d9e3fa);
  -webkit-box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.9), 0 1px 2px rgba(0, 0, 0, 0.1);
  box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.9), 0 1px 2px rgba(0, 0, 0, 0.1);
}
#story-rewind ul:before, #story-rewind ul:after, #story-rewind li:first-child:after {
  display: block;
  content: '';
  width: 0;
  height: 0;
  position: absolute;
  left: 5px;
  border: 7px outset transparent;
}
#story-rewind ul:before {
  border-bottom: 7px solid #555;
  top: -14px;
}
#story-rewind li:first-child:after {
  border-bottom: 7px solid #fff;
  top: -13px;
}
#story-rewind ul:after {
  border-bottom: 7px solid #EEF3FE;
  top: -12px;
}
#story-rewind li {
  padding: 0 12px;
  font-size: 11px;
  color: #838ca2;
  text-shadow: 0 1px #fff;
}
#story-rewind li.sep {
  border-bottom: 1px solid #b4bbce;
  padding-bottom: 4px;
  margin-bottom: 4px;
}
#story-rewind li a {
  display: block;
  position: relative;
  margin: 0 -13px;
  padding: 0 20px 0 12px;
  color: #313a4f;
  border: 1px solid transparent;
}
#story-rewind li a:hover {
  color: #fff;
  text-decoration: none;
  text-shadow: 0 1px rgba(0, 0, 0, 0.3);
  border-color: #5a70b0 #495d98 #42558a;
  background-color: #5a70b0;
  background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #7688bd), color-stop(100%, #4e64a3));
  background-image: -webkit-linear-gradient(top, #7688bd, #4e64a3);
  background-image: -moz-linear-gradient(top, #7688bd, #4e64a3);
  background-image: -ms-linear-gradient(top, #7688bd, #4e64a3);
  background-image: -o-linear-gradient(top, #7688bd, #4e64a3);
  background-image: linear-gradient(top, #7688bd, #4e64a3);
}
#story-rewind li a:hover:after {
  display: block;
}
#story-rewind li a:after {
  display: none;
  content: '';
  width: 0;
  height: 0;
  position: absolute;
  top: 50%;
  right: 5px;
  margin-top: -4px;
  border: 4px solid transparent;
  border-left-color: #9facd1;
  border-left-color: rgba(255, 255, 255, 0.4);
}
#story-rewind li.disable {
  color: #838ca2!important;
}

#progress {
  clear:both;
  display:block;
}
#progress-meter {
  border: 1px solid #ccc;
  border-radius: 4px;
  background-color: whiteSmoke;
  box-shadow: 0 5px 5px -5px #222 inset;
  width: 85%;
  height: 6px;
  display: inline-block;
  box-shadow: 0 5px 5px -5px #888 inset;
  background-color: #d8d8d8;
  background-size: 100% 100%;
  display: block;
  text-indent: -9999px;
  position:relative;
  top:5px;
  margin:auto;
}
#pb-complete {
    position:absolute;
    display:block;
    top:2px;
    bottom:2px;
    background-color:#008EDB;/*#57C7DE;*/
    right:75%;
    left:0;
}
#pb-position {
    position:absolute;
    top:1px;
    bottom:2px;
    display:block;
    left:25%;
    width:4px;
    height:4px;
    background-color:#008EDB;/*#45cbe6;*/
    border-radius:2px;
}
label.progress-meter {
  color: #bbb;
  font-size: 13px;
  margin-right: 3px;
  font-family: 'Open Sans', serif;
}

.hilight {
    -webkit-animation-name: hilight;
    -webkit-animation-duration: 1s;
    -webkit-animation-iteration-count: 1;
}

@-webkit-keyframes hilight {
    from { color:#bbb; text-shadow:none; }
    20% { color: #ffffff; text-shadow:0px 0px 16px #ffffff; }
    to { color:#bbb; text-shadow:none; }
}


label.autoplay-switch {
    color: #bbb;
    font-family: Arial, sans-serif;
    font-size: 13px;
    margin-right: 6px;
    font-family: 'Open Sans', serif;
}


button:focus {outline:none;}
button::-moz-focus-inner {border:0;}

button#autoplay-switch {
