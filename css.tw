html {
  height:100%;
}
figcaption {
    font-size:80%;
    font-style:italic;
}
.inline {
    display: inline-block;
}
.left {
    float: left;
}
.right {
    float:right;
}
body {
    color: #000;
    font-family: 'Open Sans',serif;
    margin:0;
    height:100%;
    overflow:auto;
    position:relative;
    z-index: 3;
}
h1 {
    font-family: 'Arvo',serif;
    font-weight:700;
    font-size: 36px;
    line-height: 38px;
    margin: 0 0 10px 0;
    color: #dd3b2a;
}
h4 {
    font-family: 'Arvo',serif;
    font-weight:700;
    font-size:18px;
    margin-top:0;
}
h6 {
    font-family: 'Arvo',serif;
    font-weight:700;
    font-size:14px;
    margin:0;
}
.img-container {
    position:fixed;
    top:0;
    left:0;
    background-repeat: no-repeat;
    background-position: center;
    background-attachment: fixed; 
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
    height:100%;
    width:100%;
    -webkit-transition: opacity 1s ease-in-out;
    -moz-transition: opacity 1s ease-in-out;
    -o-transition: opacity 1s ease-in-out;
    transition: opacity 1s ease-in-out;
}
.img-anchor {
    background-image: url(images/imagetest.jpg);
    opacity:1;
    z-index:1;
}
.img-fader {
    z-index:2;
    
}
.background-fade {
    opacity:0;
}


/* Make link font slightly smaller to compensate for boldface */
.content a.link-internal,
.content a.link-external,
.content a.link-back,
.content a.link-return {
    font-size: 90%;
}
.content strong {
    font-size: 90%;
}
#passages {
    color: #000;
    font-size:15px;
    background-color:#fefefe;
    width:60%;
    min-height:100%;
    margin: 0 auto;
    border-left:none;
    padding: 3em 2em;
    -moz-box-shadow: 0 0 20px black;
    -webkit-box-shadow: 0 0 20px black;
    box-shadow: 0 0 20px black;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    box-sizing:border-box;
    padding-top: 34px;
    position:relative;
}
.passage {
    line-height: 1.75;
    margin-bottom: 0;
    text-align: left;
    height:100%;
}
#ui-bar {
    display:none;
}
#passages table.alternating-rows tr:nth-child(odd) {
    background-color:#EEEEEE;/*Fallback*/
    background-color:rgba(221,221,221,0.5);
}
#passages table.alternating-rows tr:nth-child(even) {
    background-color:#DDDDDD;/*Fallback*/
    background-color:rgba(204,204,204,0.5);
}
#passages table.box {
    background-color:#EEEEEE;/*Fallback*/
    background-color:rgba(221,221,221,0.5);
}
#passages table.box th {
    background-color:#DDDDDD;/*Fallback*/
    background-color:rgba(204,204,204,0.5);
}
#passages table.box tr:first-child td,
#passages table.box tr:first-child th {
    padding-top:10px;
}
#passages table.box tr:last-child td {
    padding-bottom:10px;
}
#passages table {
    font-size: 80%;
    border-collapse: collapse;
    line-height:145%;
}
#passages th, #passages td {
    padding: 0.5em 1em;
}
table a.link-internal, a.link-external, a.link-back, a.link-return {
    font-size: 100%!important;
}


